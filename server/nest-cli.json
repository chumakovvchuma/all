{
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/graphql",
        "options": {
          "introspectComments": true
        }
      },
      "@nestjs/swagger/plugin",
      {
        "name": "@nestjs/graphql/plugin",
        "options": {
          "typeFileNameSuffix": [".input.ts", ".args.ts", ".dto.ts"]
        }
      }
    ]
  }
}
